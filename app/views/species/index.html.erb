<h1>All species</h1>
<% if is_admin %>
  <%= link_to "Add new species", new_species_path %>
  <br/><br/>
<% end %>
<ul>
<% @species.each do |species| %>
  <li>
    <%= link_to species.species_type, species_path(species) %> | 
    <%= link_to 'Edit', edit_species_path(species) %> |
    <%= link_to "Delete", species_path(species), method: :delete, data: { confirm: "Are you sure you wan't to delete" } %>
  </li>
<% end %>
</ul>
